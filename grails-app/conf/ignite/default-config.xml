<!--
    Ignite configuration with for external nodes
    List of addresses in ipFinder needs to be adapted
-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="ignite.cfg" class="org.apache.ignite.configuration.IgniteConfiguration" scope="singleton">

        <property name="peerClassLoadingLocalClassPathExclude">
            <list>
                <value>org.springframework.*</value>
                <value>org.hibernate.*</value>
                <value>org.apache.commons.logging.*</value>
                <value>org.slf4j.*</value>
            </list>
        </property>

        <property name="gridName" value="pillarone-ignite-1.10-SNAPSHOT" />

        <!-- Set to true to enable distributed class loading for examples, default is false. -->
        <property name="peerClassLoadingEnabled" value="true"/>

        <property name="marshaller">
            <bean class="org.apache.ignite.marshaller.optimized.OptimizedMarshaller">
                <!-- Set to false to allow non-serializable objects in examples, default is true. -->
                <property name="requireSerializable" value="false"/>
            </bean>
        </property>

        <property name="networkTimeout" value="60000" />

        <property name="gridLogger">
            <bean class="org.apache.ignite.logger.log4j.Log4JLogger">
                <constructor-arg type="java.lang.String" value="config/art_log4j_ignite.xml" />
            </bean>
        </property>

        <property name="publicThreadPoolSize" value="100"/>

        <property name="collisionSpi">
            <bean class="org.apache.ignite.spi.collision.noop.NoopCollisionSpi"/>
        </property>

        <property name="discoverySpi">
            <bean class="org.apache.ignite.spi.discovery.tcp.TcpDiscoverySpi">

                <property name="ackTimeout" value="30000" />
                <property name="maxAckTimeout" value="120000" />

                <property name="ipFinder">
                    <bean class="org.apache.ignite.spi.discovery.tcp.ipfinder.vm.TcpDiscoveryVmIpFinder">
                        <property name="addresses">
                            <list>
                                <value>127.0.0.1</value>
                            </list>
                        </property>
                    </bean>
                </property>
            </bean>
        </property>

        <property name="failoverSpi">
            <bean class="org.apache.ignite.spi.failover.never.NeverFailoverSpi" />
        </property>
    </bean>
</beans>
